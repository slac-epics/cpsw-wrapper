CPSW_FRAMEWORK_VERSION=R3.6.4
CPSW_FRAMEWORK_TOP=$(PACKAGE_SITE_TOP)/cpsw/framework/$(CPSW_FRAMEWORK_VERSION)

BUILDROOT_VERSION=buildroot-2016.11.1-

CPSW_FRAMEWORK_TOP_ARCH_default=$(CPSW_FRAMEWORK_TOP)/$(patsubst linuxRT-%,$(BUILDROOT_VERSION)%,$(T_A))

CPSW_FRAMEWORK_TOP_ARCH_linuxRT-arm_zynq=$(CPSW_FRAMEWORK_TOP)/$(BUILDROOT_VERSION)zynq

CPSW_FRAMEWORK_TOP_ARCH=$(or $(CPSW_FRAMEWORK_TOP_ARCH_$(T_A)),$(CPSW_FRAMEWORK_TOP_ARCH_default))

CPSW_FRAMEWORK_INCLUDES_default=$(CPSW_FRAMEWORK_TOP_ARCH)/include
cpsw_DIR_default=$(CPSW_FRAMEWORK_TOP_ARCH)/lib

CPSW_FRAMEWORK_INCLUDES:=$(wildcard $(or $(CPSW_FRAMEWORK_INCLUDES_$(T_A)),$(CPSW_FRAMEWORK_INCLUDES_default)))
cpsw_DIR:=$(wildcard $(or $(cpsw_DIR_$(T_A)),$(cpsw_DIR_default)))

ifneq ($(CPSW_FRAMEWORK_INCLUDES),)
HAVE_CPSW_FRAMEWORK=YES
endif

CPSW_FRAMEWORK_LIBS+=cpsw

INCLUDES+=$(addprefix -I,$(CPSW_FRAMEWORK_INCLUDES))
